{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "types": ["react", "react-dom", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
